<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.javacodegeeks.androidstartactivityforresultexample.ActivityOne" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="20dp"
        android:text="Maisto produktų priedų informacija"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:background="@drawable/red_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:onClick="scanCode"
        android:text="Skenuoti barkodą"
        android:textSize="22dp">
    </Button>

    <Button
        android:background="@drawable/red_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:onClick="searchInDatabase"
        android:text="Paieška pagal priedo pavadinimą"
        android:textSize="22dp" >
    </Button>

    <Button
        android:background="@drawable/red_button"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:onClick="goToDatabase"
        android:text="Nuskaityti barkodai"
        android:textSize="22dp" >
    </Button>

</LinearLayout>